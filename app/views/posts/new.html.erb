<h3>Post Form</h3>
<form class="" action="<%= posts_path%>" method="post">
  <%= form_tag posts_path do %>
  <label>Post title:</label></br>
  <input type="text" id="post_title" name="post[title]" value=""><br>

  <label>Post description</label>
  <textarea id= "post_description" name="post[description]" rows="8" cols="80"></textarea>
  <input type="submit" name="" value="Submit Post">
  <%end%>
</form>
<%= params.inspect%>
